class Solution {
public:
    int characterReplacement(string s, int k) {
        vector<int>hashArray(26 , 0);
        int i=0,j=0;
        int len = 0,maxlen = 0 , maxf = 0;
        while(j<s.size()){
            hashArray[s[j] - 'A']++;
            maxf = max(maxf , hashArray[s[j] - 'A']);

            if((j-i+1) - maxf <= k){
                len = j-i+1;
                maxlen = max(len , maxlen);
                j++;
            }
            else if((j-i+1)-maxf > k){
                while((j-i+1)-maxf > k){
                    hashArray[s[i] - 'A']--;
                    i++;
                }
                if((j-i+1) - maxf <= k){
                    len = j-i+1;
                    maxlen = max(len , maxlen);
                }
                j++;
            }
        }
        return maxlen;
    }
};
