class Solution {
public:
    int longestOnes(vector<int>& nums, int k) {
        int i=0,j=0;
        int len =0,maxlen = 0;
        while(j<nums.size()){
            if(nums[j] == 0)k--;

            
            if(k >= 0){
                len = j-i+1;
                maxlen = max(len , maxlen);
                j++;
            }
            else if(k < 0){
                while(k<0){
                    if(nums[i] == 0){
                        k++;
                    }
                    i++;
                }
                if(k == 0){
                    len = j-i+1;
                    maxlen = max(len , maxlen);
                }
                
                j++;
            }
        }
        return maxlen;
    }
};
