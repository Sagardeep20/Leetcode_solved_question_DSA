class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        unordered_map<char,int>mpp;
        int i=0,j=0,len=0,maxlen = 0;
        while(j<s.size()){
            mpp[s[j]]++;

            if(mpp.size() == (j-i+1)){
                len = j-i+1;
                maxlen = max(len , maxlen);
                j++;
            }
            else if(mpp.size() < (j-i+1) ){
                while(mpp.size() < (j-i+1)){
                    mpp[s[i]]--;
                    if(mpp[s[i]] == 0){
                        mpp.erase(s[i]);
                    }
                    i++;
                }

                if(mpp.size() == (j-i+1)){
                    len = (j-i+1);
                    maxlen = max(len , maxlen);
                }
                j++;
            }
        }
        return maxlen;
    }
};

TC-o(N)  SC-O(1)
