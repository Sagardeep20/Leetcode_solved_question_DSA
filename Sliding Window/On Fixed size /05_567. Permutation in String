        vector<char>freeq1(26,0);
        vector<char>freeq2(26,0);
        for(auto &i : s1){
            freeq1[i-'a']++;
        }
        int i=0,j=0;
        int len1 = s1.size();
        while(j < s2.size()){
            freeq2[s2[j]-'a']++;
            if((j-i+1) < len1){
                j++;
            }
            else if((j-i+1) == len1){
                if(freeq1 == freeq2)return true;
                else{
                    freeq2[s2[i]-'a']--;
                    i++;
                    j++;
                }
            }
        }
        return false;
TC-o(n) SC - o(1)
    }
