class Solution {
  public:
    void dfs(int start, vector<int>& vis, vector<vector<int>>& adjLs, vector<vector<int>>& ans){
        vis[start] = 1;
        ans.push_back(start);
        
        for(auto it:adjLs[start]){
            if(vis[it] == 0){
                vis[it] = 1;
                dfs(it, vis, adjLs, ans);
            }
        }
    }
    vector<vector<int>> getComponents(int V, vector<vector<int>>& edges) {
        // code here
        vector<vector<int>> adjLs(V);
        for(int i=0;i<V;i++){
            for(int j=0;j<V;j++){
                if(edges[i][j] == 1 && i != j){
                    adjLs[i].push_back(j);
                    adjLs[j].push_back(i);
                }
            }
        }
        
        vector<int>vis(V,0);
        vector<vector<int>> ans;
        for(int i=0;i<V;i++){
            if(vis[i] == 0){
                dfs(i, vis, adjLs, ans);
            }
        }
        
        return ans;
        
    }
};
