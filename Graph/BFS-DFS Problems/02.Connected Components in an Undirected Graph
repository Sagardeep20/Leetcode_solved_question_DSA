GFG- https://www.geeksforgeeks.org/problems/connected-components-in-an-undirected-graph/1

class Solution {
  public:
    void dfs(int node,vector<int>& vis,vector<vector<int>>& adjLs,vector<int>& temp){
        vis[node] = 1;
        temp.push_back(node);
        
        for(auto it:adjLs[node]){
            if(vis[it] == 0){
                vis[it] = 1;
                dfs(it,vis,adjLs,temp);
            }
        }
    }
    vector<vector<int>> getComponents(int V, vector<vector<int>>& edges) {
        // code here
        vector<vector<int>>adjLs(V);
        for(auto it:edges){
            int u = it[0];
            int v = it[1];
            
            adjLs[u].push_back(v);
            adjLs[v].push_back(u);
        }
        
        vector<vector<int>>ans;
        vector<int>vis(V,0);
        
        for(int i=0;i<V;i++){
            if(vis[i] == 0){
                vector<int>temp;
                
                dfs(i,vis,adjLs,temp);
                ans.push_back(temp);
            }
        }
        return ans;
    }
};




BY BFS- 
void bfs(int start,vector<int>& vis,vector<vector<int>>& adjLs,vector<int>& temp){
        vis[start] = 1;
        queue<int>q;
        q.push(start);
        
        while(!q.empty()){
            int node = q.front();
            q.pop();
            temp.push_back(node);
            
            for(auto it:adjLs[node]){
                if(vis[it] == 0){
                    vis[it] = 1;
                    q.push(it);
                }
            }
        }
    }
