Leetcode 1020

class Solution {
public:
    void dfs(int row,int col,vector<vector<int>>& ans,vector<vector<int>>& grid,int delRow[],int delCol[]){
        int n = grid.size();
        int m = grid[0].size();
        ans[row][col] = 0;
        for(int i=0;i<4;i++){
            int nrow = row+delRow[i];
            int ncol = col+delCol[i];
            if(nrow>=0 && nrow<n && ncol>=0 && ncol<m && grid[nrow][ncol] == 1 && ans[nrow][ncol] != 0){
                dfs(nrow,ncol,ans,grid,delRow,delCol);
            }
        }
    }
    int numEnclaves(vector<vector<int>>& grid) {
        int n = grid.size();
        int m = grid[0].size();
        int delRow[4] = {-1,0,1,0};
        int delCol[4] = {0,1,0,-1};
        vector<vector<int>> ans = grid;
        
        int i=0,j=0;
        while(j<m){//row-0
            if(grid[i][j] == 1){
                dfs(i,j,ans,grid,delRow,delCol);
            }
            j++;
        }
        i=n-1,j=0;//last row
        while(j<m){
            if(grid[i][j] == 1){
                dfs(i,j,ans,grid,delRow,delCol);
            }
            j++;
        }
        i=0,j=0;//first col
        while(i<n){
            if(grid[i][j] == 1){
                dfs(i,j,ans,grid,delRow,delCol);
            }
            i++;
        }
        i=0,j=m-1;//last col
        while(i<n){
            if(grid[i][j] == 1){
                dfs(i,j,ans,grid,delRow,delCol);
            }
            i++;
        }

        int cnt = 0;
        for(int i=0;i<n;i++){
            for(int j=0;j<m;j++){
                if(ans[i][j] == 1)cnt++;
            }
        }

        return cnt;

    }
};
