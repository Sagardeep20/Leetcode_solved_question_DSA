GFG LINK - https://www.geeksforgeeks.org/problems/number-of-distinct-islands/1

class Solution {
  public:
    void dfs(int row,int col,vector<vector<int>>& vis,vector<vector<int>>& grid,
    int delRow[],int delCol[],int row0,int col0,vector<pair<int,int>>& vec
    ){
        int n = grid.size();
        int m = grid[0].size();
        
        vis[row][col] = 1;
        
        int r = row-row0;
        int c = col-col0;
        vec.push_back({r,c});
        for(int i=0;i<4;i++){
            int nrow = row+delRow[i];
            int ncol = col+delCol[i];
            
            if(nrow>=0 && nrow<n && ncol>=0 && ncol<m 
            && grid[nrow][ncol]==1 && vis[nrow][ncol] == 0)
            {
                dfs(nrow,ncol,vis,grid,delRow,delCol,row0,col0,vec);
            }
        }
    }
    int countDistinctIslands(vector<vector<int>>& grid) {
        // code here
        int n = grid.size();
        int m = grid[0].size();
        int delRow[4] = {-1,0,1,0};
        int delCol[4] = {0,1,0,-1};
        
    
        set<vector<pair<int,int>>> st;
        
        vector<vector<int>> vis(n,vector<int>(m,0));
        
        for(int i=0;i<n;i++){
            for(int j=0;j<m;j++){
                
                if(grid[i][j] == 1 && vis[i][j] == 0){
                    vector<pair<int,int>> vec;
                    dfs(i,j,vis,grid,delRow,delCol,i,j,vec);
                    st.insert(vec);
                }
                
            }
        }
        return st.size();
    }
};
