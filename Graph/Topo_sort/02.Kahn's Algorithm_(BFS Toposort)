class Solution {
  public:
    vector<int> topoSort(int V, vector<vector<int>>& edges) {
        // code here
        //kahn's algorithm
        
        vector<vector<int>> adjLs(V);
        for(auto it:edges){
            int u = it[0];
            int v = it[1];
            
            adjLs[u].push_back(v);
        }
        
        vector<int>indegree(V,0);
        for(int i=0;i<V;i++){
            for(auto it:adjLs[i]){
                indegree[it]++;
            }
        }
        
        vector<int>ans;
        queue<int>q;
        for(int i=0;i<V;i++){
            if(indegree[i] == 0){
                q.push(i);
            }
        }
        
        while(!q.empty()){
            int node = q.front();
            ans.push_back(node);
            q.pop();
            
            for(auto it:adjLs[node]){
                indegree[it]--;
                if(indegree[it] == 0){
                    q.push(it);
                }
            }
        }
        
        return ans;
        
    }
};
