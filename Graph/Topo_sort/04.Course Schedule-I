Leetcode - 207
class Solution {
public:
    bool canFinish(int numCourses, vector<vector<int>>& prerequisites) {
        int n = numCourses;
        vector<vector<int>> adjLs(n);
        //making of adjLs  (u,v) = (u<--v) = v->u == v u in topo sort
        for(auto it:prerequisites){
            int u = it[0];
            int v = it[1];

            adjLs[v].push_back(u);
        }

        //doing topo sort BFS->kahn's algo
        vector<int>indegree(n,0);
        queue<int>q;
        vector<int>topo;
        //making of indegree
        for(int i=0;i<n;i++){
            for(auto it:adjLs[i]){
                indegree[it]++;
            }
        }

        for(int i=0;i<n;i++){
            if(indegree[i] == 0){
                q.push(i);
            }
        }

        while(!q.empty()){
            int node = q.front();
            topo.push_back(node);
            q.pop();

            for(auto it:adjLs[node]){
                indegree[it]--;
                if(indegree[it] == 0){
                    q.push(it);
                }
            }
        }

        if(topo.size() == n)return true;
        return false;
    }
};
