class Solution {
public:
    vector<int> findOrder(int numCourses, vector<vector<int>>& prerequisites) {
        int n = numCourses;
        //making adjLS
        vector<vector<int>> adjLs(n);
        for(auto it:prerequisites){
            int u = it[0];
            int v = it[1];

            adjLs[v].push_back(u);
        }

        //kahn's algo to make topo sort array which is ans
        queue<int>q;
        vector<int>indegree(n,0);
        vector<int>topo;

        //now making the indegree array
        for(int i=0;i<n;i++){
            for(auto it:adjLs[i]){
                indegree[it]++;
            }
        }

        for(int i=0;i<n;i++){
            if(indegree[i] == 0){
                q.push(i);
            }
        }

        while(!q.empty()){
            int node = q.front();
            q.pop();
            topo.push_back(node);

            for(auto it:adjLs[node]){
                indegree[it]--;
                if(indegree[it] == 0){
                    q.push(it);
                }
            }
        }

        if(topo.size() != n)return {};
        return topo;
    }
};
