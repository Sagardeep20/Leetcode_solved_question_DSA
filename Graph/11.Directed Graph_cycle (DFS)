GFG - https://www.geeksforgeeks.org/problems/detect-cycle-in-a-directed-graph/1
class Solution {
  public:
    bool dfs(int node,vector<int>& vis,vector<int>& pathVis,vector<vector<int>>& adjLs){
        vis[node] = 1;
        pathVis[node] = 1;
        for(auto it:adjLs[node]){
            if(vis[it] == 0){
                if(dfs(it,vis,pathVis,adjLs)) return true;
            }else if(vis[it] == 1 && pathVis[it]==1){
                return true;
            }
        }
        
        pathVis[node] = 0;
        return false;
    }
    bool isCyclic(int V, vector<vector<int>> &edges) {
        // code here
        vector<vector<int>> adjLs(V);
        for(auto it:edges){
            int u = it[0];
            int v = it[1];
            
            adjLs[u].push_back(v);
        }
        
        vector<int>vis(V,0);
        vector<int>pathVis(V,0);
        for(int i=0;i<V;i++){
            if(vis[i]==0){
                if(dfs(i,vis,pathVis,adjLs))return true;
            }
        }
        return false;
    }
};
