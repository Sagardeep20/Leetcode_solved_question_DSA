/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */
class Solution {
public:
    ListNode* middleNode(ListNode* head) {
        /*
        ListNode* temp = head;
        int cnt = 0;
        if(temp == NULL || temp->next == NULL)return temp;
        while(temp != NULL){
            cnt++;
            temp = temp->next;
        }

        int check = 1;
        temp = head;
        while(check != cnt/2){
            check++;
            temp = temp->next;
        }
        return temp->next;
        */
        //TC- 0(N + N/2)
        // SC- 0(1)

        // TORTOISE AND HARE ALGO
        ListNode* fast = head;
        ListNode* slow = head;

        while(fast != NULL && fast->next != NULL){
            slow = slow->next;
            fast = fast->next->next;
            
        }
        return slow;
    }
};
