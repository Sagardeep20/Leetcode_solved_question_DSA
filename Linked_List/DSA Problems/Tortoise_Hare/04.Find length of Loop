class Node {
 public:
    int data;
    Node *next;

    Node(int x) {
        data = x;
        next = NULL;
    }
};
*/

class Solution {
  public:
    int lengthOfLoop(Node *head) {
        // code here
        Node* slow = head;
        Node* fast = head;
        
        while(fast != NULL && fast->next != NULL){
//fast!=NULLodd num of LL fast->next != NULL even num of  nodes
            slow = slow->next;
            fast = fast->next->next;
            if(slow == fast){
                break;
            }
        }
        
        if(fast == NULL || fast->next == NULL)return 0;//no cycle
        
        int len=1;
        slow = slow->next;
        while(slow != fast){
            len++;
            slow = slow->next;
        }
        return len;
    }
};
