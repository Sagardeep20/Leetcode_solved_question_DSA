class Solution {
public:
    int numSubarraysWithSum(vector<int>& nums, int goal) {
        unordered_map<int , int>mpp;
        int cnt = 0;
        int cumSum = 0;
        mpp[0] = 1;
        for(int i=0;i<nums.size();i++){
            cumSum += nums[i];
            if(mpp.find(cumSum-goal) != mpp.end()){
                cnt += mpp[cumSum-goal];
            }
            mpp[cumSum]++;
        }
        return cnt;
    }
};
