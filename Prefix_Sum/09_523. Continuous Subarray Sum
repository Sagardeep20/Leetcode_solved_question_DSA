class Solution {
public:
    bool checkSubarraySum(vector<int>& nums, int k) {
        unordered_map<int,int>mpp; // map will consist (cumSum % k) as key and value as its idx
        int cumSum = 0,len = 0,maxlen = 0;
        mpp[0] = -1;
        int reminder = 0;
        for(int i=0;i<nums.size();i++){
            cumSum += nums[i];
            reminder = (cumSum % k);
            if(mpp.find(reminder) != mpp.end()){
                len = i - mpp[reminder];
                maxlen = max(len , maxlen);
            }
            else{
                mpp[reminder] = i;
            }
        }
        if(maxlen >= 2)return true;
        return false;

    }
};
