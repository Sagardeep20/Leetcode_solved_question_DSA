class Solution {
public:
    int largestPerimeter(vector<int>& nums) {
        if(nums.size() < 3)return 0;
        auto myComparator = [](int &a , int &b){
            return a>b;
        };
        sort(nums.begin(),nums.end(),myComparator);

        for(int i=0;i<= (nums.size() - 3);i++){///must check
            int a = nums[i];
            int b=nums[i+1];
            int c=nums[i+2];
            if(b+c > a)return (a+b+c);
            else{

            }
        }
        return 0;
    }
}; TC-o(nlogn + n) 
   SC-o(1)
