class Solution {
public:
    int findMin(vector<int>& nums) {
        int n = nums.size();
        int s=0,h=n-1;
        int ans = INT_MAX;
        while(s <= h){
            int mid = s+(h-s)/2;
            if(nums[s] <= nums[mid]){
                //left part from idx s to mid is sorted 
                //take the minimum from it and jump to s=m+1
                ans = min(ans,nums[s]);
                s=mid+1;
            }else{
                ans = min(ans,nums[mid]);
                h = mid-1;
            }
        }
        return ans;
    }
};
