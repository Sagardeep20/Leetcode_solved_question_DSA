class Solution {
public:
    int search(vector<int>& nums, int target) {
        int n = nums.size();
        int s = 0 , h = n-1;

        while(s <= h){
            int m = (s+h)/2;

            if(nums[m] == target){
                return m;
            }
            //left part sorted
            if(nums[s] <= nums[m]){
                if(target >= nums[s] && target <= nums[m]){
                    h = m-1;
                }
                else{
                    s = m+1;
                }
            }
            //right side sorted
            else{
                if(target >= nums[m] && target <= nums[h]){
                    s = m+1;
                }
                else{
                    h = m-1;
                }
            }
        }
        return -1;
    }
};
